@using Microsoft.AspNetCore.Identity
@inject SignInManager<Users> SignInManager
<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            @*apuntamos al controller asp-controller="AccountTypes" y al view asp-action="Index"*@
            <a class="nav-link text-dark" asp-area="" asp-controller="AccountTypes" asp-action="Index">Account Types</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Categories" asp-action="Index">Categories</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-action="Logout" asp-controller="Users">
                <button type="submit" class="nav-link btn btn-link text-dark">
                    Logout
                </button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link dark-text" asp-controller="Users" asp-action="Login">
                Login
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link dark-text" asp-controller="Users" asp-action="SignUp">
                Sign Up
            </a>
        </li>
    }
</ul>
